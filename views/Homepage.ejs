  <!-- content -->

  <!-- carousel -->
  <div class="slider">
    <input type="radio" name="toggle" id="btn-1" checked>
    <input type="radio" name="toggle" id="btn-2">
    <input type="radio" name="toggle" id="btn-3">
  
    <div class="slider-controls">
      <label for="btn-1"></label>
      <label for="btn-2"></label>
      <label for="btn-3"></label>
    </div>
  
    <ul class="slides">
      <li class="slide">
        <div class="slide-content">
          <h2 class="slide-title">Virtual Consultations
            </h2>
          <p class="slide-text">Speak directly with a licensed medical professional from the comfort of your own home.</p>
        </div>
        <p class="slide-image">
          <img src="/Images/Virtual Consultations.png" alt="stuff" width="320" height="240" >
        </p>
      </li>
      <li class="slide">
        <div class="slide-content">
          <h2 class="slide-title">Medical Advice</h2>
          <p class="slide-text">Get expert medical advice on a variety of health concerns and conditions.</p>
        </div>
        <p class="slide-image">
          <img src="/Images/Medical Advice.png" alt="stuff" width="320" height="240">
        </p>
      </li>
      <li class="slide">
        <div class="slide-content">
          <h2 class="slide-title">Online Prescriptions</h2>
          <p class="slide-text">Receive online prescriptions and have them delivered directly to your doorstep.</p>
          </div>
        <p class="slide-image">
          <img src="/Images/Prescription.png" alt="stuff" width="320" height="240">
        </p>
      </li>
    </ul>
  </div>

  <!-- content.... -->


  <br>
  <br>
  <br>

  <h3 style="text-align: center;">Nearby Hospitals And Pharmacy</h3>
  <br>
  <div class="display">
  <% for (let i = 0; i < 3; i++) { %>
    <div class="myCard" >
      <div class="innerCard" >
        <div class="frontSide">
          <p class="title"><%= places[i].placeName %></p>
          <img src="<%= places[i].imageUrl %>" alt="<%= places[i].placeName %>" class="resizable-image" id="<%= places[i].placeName.replace(/\s/g, '') %>">
        </div>
        <div class="backSide">
          <p class="title"><%= places[i].placeName %></p>
          <button class="call-now-button" data-contact="<%= places[i].contactInfo %>">Call Now</button>
        </div>
      </div>
    </div>
  <% } %>
</div>
  <br>
  <br>
  <br>

<div class="display">
  <h3 >Consultations</h3>
  <br>
    <div>
      <p>Meet Our Experts
        Our team of medical experts consists of highly qualified professionals with years of experience in their respective fields. They are dedicated to providing the highest quality medical consultation services to our patients.
        </p>
      <a href="/medConnect">Connect</a>
    </div>
  
</div>  


  <!-- footer -->
<%- include('partials/Footer.ejs') %>

<script src="/server.js"></script>  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script>
    // Auto play the slider
    var currentIndex = 0;
    var slides = document.querySelectorAll('.slide');
    var radios = document.querySelectorAll('[name="toggle"]');
    
    function showSlide(index) {
      slides.forEach(function(slide) {
        slide.style.opacity = 0;
      });
      radios.forEach(function(radio) {
        radio.checked = false;
      });
      slides[index].style.opacity = 1;
      radios[index].checked = true;
    }
    
    function nextSlide() {
      currentIndex = (currentIndex + 1) % slides.length;
      showSlide(currentIndex);
    }
    
    // Change slide every 5000 milliseconds (5 seconds)
    setInterval(nextSlide, 5000);
  </script>


</body>
</html>

