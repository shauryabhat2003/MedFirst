<!-- views/nearbyHospitals.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nearby Hospitals</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/styles/styles.css">
</head>
<body>

  <%- include('partials/Navbar.ejs') %>
  <h1 class="nearbyHospitalstitle">Nearby Hospitals</h1>

<% places.forEach(place => { %>
  <div class="myCard">

      <div class="innerCard">
        <div class="frontSide">
          <p class="title"><%= place.placeName %></p>
          <img src="<%= place.imageUrl %>" alt="<%= place.placeName %>" class="resizable-image" id="<%= place.placeName.replace(/\s/g, '') %>">
        </div>
        <div class="backSide">
          <p class="title"><%= place.placeName %></p>
          <button class="call-now-button" data-contact="<%= place.contactInfo %>">Call Now</button>
        </div>
      </div>
  </div>
  
<% }); %>


<%- include('partials/Footer.ejs') %>

  <script src="/public/scripts/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>
